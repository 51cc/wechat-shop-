
/* 输入框 商品总价 */
.row{
  width: 100%;
  height: 101rpx;
  padding: 25rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #F4F4F4;
  background: #fff;
}
.row .title{
  width: 25%;
  height: 50rpx;
  font-size: 30rpx;
  color: #444;
  text-align: left;
  line-height: 50rpx;
}
.row .row_input{
  width: 75%;
  height: 50rpx;
  font-size: 30rpx;
  color: #444;
  text-align: left;
  line-height: 50rpx;
}
.row .price{
  width: 75%;
  height: 50rpx;
  font-size: 30rpx;
  color: #FD3128;
  text-align: right;
  line-height: 50rpx;
}
