/* 商品列表 */
.product_list{
  width: 100%;
  padding: 25rpx 25rpx 0rpx 25rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 20rpx;
}
.product_list .product{
  width: 100%;
  height: 140rpx;
  margin-bottom: 25rpx;
  clear: both;
}
.product_list .product .left{
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-right: -140rpx;
}
.product_list .product .right{
  float: right;
  width: 100%;
  height: 140rpx;
  padding-left: 160rpx;
  box-sizing: border-box;
}
.product_list .product .right .top{
  display: block;
  width: 100%;
  height: 75rpx;
  font-size: 30rpx;
  line-height: 37rpx;
  overflow: hidden;
}
.product_list .product .right .center{
  display: block;
  width: 100%;
  height: 35rpx;
  font-size: 30rpx;
  line-height: 35rpx;
  overflow: hidden;
  color: #FE1302;
}
.product_list .product .right .bottom{
  display: block;
  width: 100%;
  height: 30rpx;
  font-size: 26rpx;
  line-height: 30rpx;
  overflow: hidden;
  color: #C2C2C2;
}


/* 功能菜单 */
.function_menu{
  width: 100%;
  height: 120rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
}
.function_menu .left{
  width: 60%;
  height: 120rpx;
  font-size: 30rpx;
  line-height: 120rpx;
  text-align: center;
  color: #444;
  background: #fff;
}
.function_menu .right{
  width: 40%;
  height: 120rpx;
  font-size: 30rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  background: #FC544B;
}
