/* pages/huatiquans/huatiquans.wxss */
.huatilist{
  width: 710rpx;
  padding: 20rpx 20rpx;
  /* box-sizing: border-box; */
  border-bottom: 1rpx solid #f5f5f5; 
}
.huatitop{
  width: 100%;
  height: 80rpx;
}
.huatitop > .left{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  display: inline-block;
}
.huatitop > .center{
  width: 460rpx;
  height: 80rpx;
  display: inline-block;
}
.huatitop > .center >.top{
  height: 40rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  line-height: 35rpx;
  overflow: hidden;
}
.huatitop > .center >.bottom{
  font-size: 24rpx;
  overflow: hidden;
  height: 40rpx;
  color: #999;
  line-height: 45rpx;
}
.huatitop > .right{
  width: 130rpx;
  height: 80rpx;
  margin-left: 20rpx;
  display: inline-block;
}
.huatitop > .right>button{
  width: 130rpx;
  height: 50rpx;
  font-size: 24rpx;
  border-color: #e71f19;
  color: #e71f19;
  padding: 0;
  line-height: 50rpx;
  margin-bottom: 15rpx;
  background: #fff;
}
.huatitext{
  margin-top: 20rpx;
  /* max-height: 95rpx; */
  color: #333;
  font-size: 24rpx;
  line-height: 35rpx;
   overflow: hidden; 
  display: -webkit-box;
   -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; 
}
.huatiimg{
  margin-top: 20rpx;
}
.huatiaddress{
  margin-top: 20rpx;
  color: #9ab9d1;
  font-size: 24rpx;
  line-height: 40rpx;
  height: 40rpx;
  overflow: hidden;
}
.huatibottom{
  box-sizing: border-box;
  height: 80rpx;
  margin: 0 -19rpx;
  margin-top: 20rpx;
}
.huatibottom>view{
  height: 80rpx;
  display: inline-block;
  width: 187rpx;
  text-align: center;
  overflow: hidden;
}


.addhuati{
  position: fixed;
  right: 20rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.addhuati>image{
  margin: 29rpx;
  width: 42rpx;
  height: 42rpx;
}

.fxs{
  line-height:50rpx;
  background: #fff;
  height: 50rpx;
}
 .fxs:after{
  content: none;
} 
.quesheng_text_style{
  display: block;
  margin-top: 40rpx;
  text-align: center;
  font-size: 35rpx;
  color: #999999;
  width: 750rpx;
}
.quesheng_image_style{
  width: 454rpx;
  height: 326rpx;
  margin: 200rpx 150rpx 50rpx 150rpx;
}