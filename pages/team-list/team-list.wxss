/* 团购列表 */
.list{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  position: relative;
  background: #fff;
}
.list>image{
  width: 100%;
  height: 340rpx;
  display: block;
}
.list>.title{
  width: 100%;
  height: 30rpx;
  color: #444;
  font-size: 30rpx;
  text-align: left;
  overflow: hidden;
  line-height: 30rpx;
  margin-top: 30rpx;
}
.list>.price{
  width: 100%;
  height: 30rpx;
  font-size: 30rpx;
  text-align: left;
  line-height: 30rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
}
.list>button{
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  width: 130rpx;
  height: 50rpx;
  color: #fff;
  background: #FF9D1E;
  font-size: 30rpx;
  line-height: 50rpx;
  padding-left: 0;
  padding-right: 0;
}