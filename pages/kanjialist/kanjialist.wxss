/* pages/kanjialist/kanjialist.wxss */
page{
  height: 100%;
    background: #f5f5f5;
}
.contain{
  background: #f5f5f5;
  height: 100%;
  width: 750rpx;
  position: relative;
}
.kanjia_head_style{
  width: 750rpx;
  height: 300rpx;
  background: #f5f5f5;
}
.kanjia_list_style{
  margin-left: 20rpx;
  width: 710rpx;
  background: #f5f5f5;
  position: absolute;
  top: 220rpx;
}
.kanjia_cell_style{
  margin-bottom: 20rpx; 
  padding-bottom: 20rpx;
  width: 710rpx;
  height: 510rpx;
  background: white;
  position: relative;
}

.kanjia_product_style{
  margin: 20rpx 20rpx 0 20rpx;
  width: 670rpx;
  height: 335rpx;
  background: white;
}
.kanjia_ing_style{
  width: 140rpx;
  height: 60rpx;
  position: absolute;
  left: 20rpx;
  top: 40rpx;
}

.kanjia_title_style{
  position: absolute;
  display: block;
  top: 350rpx;
  left: 20rpx;
  width: 670rpx;
  font-size: 24rpx;
  line-height: 30rpx; 
  /* height: 30rpx; */
}
.kanjia_bottom_style{
  position: absolute;
  top: 440rpx;
  left: 20rpx;
  width: 670rpx;
  height: 70rpx;
  display: flex;
}
.kanjia_left_style{
  font-size: 24rpx;
  text-align: left;
  color: #444444;
  line-height: 70rpx;
} 
.kanjia_jiage_style{
  font-size: 36rpx;
  text-align: left;
  color: #ff4d4d;
  line-height: 70rpx;
}
.kanjia_play_style{
  position: absolute;
  right: 0;
  margin-top: 10rpx;
  height: 50rpx;
  width: 170rpx;
  background: #ff4a4a;
  text-align: center;
  color: white;
  font-size: 24rpx;
  line-height: 50rpx;
  border-radius: 8rpx;
}
