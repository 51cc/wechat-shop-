}

.container{
  padding: 0;
}

.settled_list{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #eeeeee;
  padding: 0 24rpx;
  font-size: 24rpx;
  color: #444;
  background: #fff;
}
.settled_list>.left{
  height: 100rpx;
  width: 152rpx;
  float: left;
  font-size: 28rpx;
}
.settled_list>.settled_left {
  color: #999;
  width: 505rpx;
  height: 100rpx;
  float: right;
  margin-right: 15rpx;
}
.settled_list>.settled_left picker,.picker {
  color: #999;
  width: 505rpx;
  height: 100rpx;
  text-align: right;
}
.settled_list>image {
