}

.fabubtn{
  margin-left: 25rpx;
  border-radius: 10rpx;
  width: 700rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background: #C4C4C4;
  margin-bottom: 30rpx;
}

.personal {
  width: 84rpx;
  height: 84rpx;
  margin-top: 10rpx;
  border-radius: 100%;
}

.settled_left .icon {
  width: 41rpx;
  height: 61rpx;
  margin-top: 22rpx;
  margin-left: 10rpx;
}

.input {
  height: 70rpx;
  margin-top: 15rpx;
  width: 500rpx;
  text-align: left;
}

.introduce {
  background: #fff;
  border-bottom: 1px solid #ededed;
}

.introduce text {
  line-height: 100rpx;
  height: 100rpx;
  font-size: 24rpx;
  color: #444;
  padding: 0 24rpx;
}

.place {
  font-size: 24rpx;
  color: #999;
}

.introduce textarea {
  padding: 0 24rpx; 
  width: 700rpx;
  height: 136rpx;
  font-size: 24rpx;
}

.money {
  height: 74rpx;
  line-height: 74rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
  color: #999;
}

.money text {
  color: #e71f19;
}

.info {
  background: #dcdcdc;
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 9999;

  

}

.leftPos {
  right: -100%;
  -moz-transition: right 0.5s ease-in-out 0s;
  -webkit-transition: right 0.5s ease-in-out 0s;
  -o-transition: right 0.5s ease-in-out 0s;
  transition: right 0.5s ease-in-out 0s;
}

.rightPos {
  right: 0;
  -moz-transition: right 0.5s ease-in-out 0s;
  -webkit-transition: right 0.5s ease-in-out 0s;
  -o-transition: right 0.5s ease-in-out 0s;
  transition: right 0.5s ease-in-out 0s;
}

.info view {
  line-height: 50rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
  padding: 0 24rpx;
}

