/* pages/myjifen/myjifen.wxss */
page{
  background: #eeeeee;
  height: 100%;
}
.head_style{
  height: 280rpx;
  width: 750rpx;
  position: relative;
}

.mask_style{
  width: 750rpx;
  height: 80rpx;
  position: absolute;
  bottom: 0rpx;
}
.mask_style>image{
  width: 100%;
  height: 100%;
}
.j_text{
  color: white;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 250rpx;
  text-align: center;
}
.yi_qiandao_style{
  position: absolute;
  right: 40rpx;
  height: 60rpx;
  width: 180rpx;
  top: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 60rpx;
}
.yi_qiandao_style>text{
  margin-top: 10rpx;
  height: 40rpx;
  text-align: center;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.5);
  line-height: 40rpx;
  display: block;
  width: 180rpx;
}
.head_view_style
{
  height: 200rpx;
  width: 750rpx;
  display: flex;
}

.head_left_style{
  flex: 1;
}
.head_middle_style{
  flex: 1;
  display: flex;
}
.head_right_style{
  flex: 1;
  position: relative;
}

.head_left_up_style{
  display: block;
  margin-left: 20%;
  text-align: left;
  width: 80%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  color: white;
  margin-top: 30rpx;
}
.head_left_down_style{
  display: block;
  margin-left: 20%;
  text-align: left;
  width: 80%;
  height: 50rpx;
  line-height: 55rpx;
  font-size: 48rpx;
  color: white;
  font-weight: bold;
}
.head_middle_middle_style{
  margin: 50rpx auto;
  height: 100rpx;
  width: 100%;
  display: flex;
}
.head_middle_middle_style>image{
  width: 34rpx;
  height: 34rpx;
  margin-top: 33rpx;
  margin-left: 80rpx;
}
.head_middle_middle_style>text{
  margin-top: 25rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 40rpx;
  color: white;
  font-weight: bold;
}

  
.qiandao_style{
  display: flex;
  position: absolute;
  right: 40rpx;
  height: 60rpx;
  width: 180rpx;
  top: 40rpx;
  border: 1rpx solid #ffffff;
  border-radius: 60rpx;
}
.qiandao_style>image{
  width: 34rpx;
  height: 34rpx;
  margin-left: 25rpx;
  margin-top: 13rpx;
}
.qiandao_style>text{
  margin-left: 20rpx;
  margin-top: 10rpx;
  height: 40rpx;
  width: 120rpx;
  text-align: left;
  font-size: 32rpx;
  color: white;
  line-height: 40rpx;
}
.day_qian_style{
  position: absolute;
  top: 120rpx;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.5);

}

.choujiang_bg{
  background: white;
  margin-top: 20rpx;
  width: 750rpx;
  padding: 20rpx 0rpx;
}

.choujiang_bg>image{
  width: 400rpx;
  height: 50rpx;
  margin-left: 175rpx;
}
.choujiang_product_style{
  width: 750rpx;
  display: flex;
  background: white;
  flex-wrap: wrap;
}






